#include <SoftwareSerial.h>

SoftwareSerial mySerial(0,1);
#define sensor 1
int valorlido = 0;
int limite = 300;
int sinal = 0;

void setup() {
pinMode(5,OUTPUT);
mySerial.begin(9600);  
}

void loop() {
valorlido = analogRead(1);

if (valorlido > limite && sinal == 0){
mySerial.write(12);
digitalWrite(5,LOW);
sinal = 1;
delay(500);
}
else if(valorlido < limite){
digitalWrite(5,HIGH);
sinal = 0;  
}

}
